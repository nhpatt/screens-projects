<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:liferay="http://schemas.android.com/apk/res-auto"
    android:id="@+id/wallet_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imgo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/wallet" />

    <com.liferay.mobile.screens.ddl.list.DDLListScreenlet
        android:id="@+id/wallet_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgo"
        liferay:labelFields="Title"
        liferay:layoutId="@layout/ddl_list_material"
        liferay:recordSetId="@integer/ddl_recordset_id"
        liferay:structureId="@integer/ddl_structure_id" />

</RelativeLayout>
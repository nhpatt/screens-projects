<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="material_theme">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="android:textColor">@android:color/white</item>
	</style>

	<style name="label">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/material_primary</item>
	</style>

	<style name="field">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">10dp</item>
		<item name="android:layout_marginBottom">20dp</item>
		<item name="android:layout_marginRight">10dp</item>
		<item name="android:backgroundTint">@color/material_primary</item>
		<item name="android:editable">false</item>
		<item name="android:enabled">false</item>
		<item name="android:focusable">false</item>
	</style>

	<style name="AppOverlay" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
		<item name="colorPrimary">#EEEEEE</item>
	</style>

	<style name="AlertDialogCustom" parent="Theme.AppCompat.Dialog.Alert"></style>

</resources>
